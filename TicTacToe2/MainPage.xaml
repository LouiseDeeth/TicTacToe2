<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToe2.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="MainLayout" VerticalOptions="Start">
            <Grid x:Name="GridPageContent" BackgroundColor="CornflowerBlue"
   HeightRequest="300" WidthRequest="300"
   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" RowSpacing="6" ColumnSpacing="6" Padding="6">
                <!-- Content added here at runtime -->

            </Grid>
            <Button x:Name="mybtn"  Text="Start Game" Clicked="Button_Clicked" WidthRequest="150"/>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Row: " VerticalOptions="Center" />
                <Entry x:Name="EntryR" Placeholder="00" Keyboard="Numeric" />
                <Label Text="Col: " VerticalOptions="Center" />
                <Entry x:Name="EntryC" Placeholder="00" Keyboard="Numeric" />
                <Button x:Name="BtnMove" Text="Move"
                 Margin="4, 1, 1, 1"
                 Clicked="BtnMove_Clicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
